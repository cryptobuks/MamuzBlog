<?php

$posts = '';
foreach ($this->collection as $entity) {
    $posts .= $this->postPanel($entity);
    $posts .= $this->pager($this->collection, $this->routeParams);
}

if (!$this->isTerminal) {
    $this->headTitle()->append('MamuzBlog');
    $posts = '<div class="list">' . $posts . '</div>';
}

echo $posts;
