<?php

$this->headTitle()->append($this->translate('Blog'));
echo '<h1>' . $this->translate('Blog') . '</h1>' . PHP_EOL;

echo '<ul>' . PHP_EOL;
foreach ($this->collection as $entity) {
    if ($item = $this->tag($entity)) {
        echo '<li>' . $item . '</li>' . PHP_EOL;
    }
}
echo '</ul>' . PHP_EOL;

echo $this->tagPager($this->collection, $this->routeParams) . PHP_EOL;
