{
    "name"             : "mamuz/mamuz-blog",
    "type"             : "library",
    "description"      : "Provides simple product owner blog feature for ZF2 with Doctrine",
    "homepage"         : "https://github.com/mamuz/MamuzBlog",
    "license"          : "MIT",
    "keywords"         : ["mamuz", "blog", "markdown", "zf2", "doctrine"],
    "authors"          : [
        {
            "name" : "Marco Muths",
            "email": "muzzi_is@web.de"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable"    : true,
    "require"          : {
        "php"                         : ">=5.4",
        "zendframework/zendframework" : "~2.3.1",
        "doctrine/doctrine-orm-module": "0.*",
        "maglnet/magl-markdown"       : "1.*",
        "neilime/zf2-twb-bundle"      : "2.*@stable",
        "hashids/hashids"             : "dev-master"
    },
    "require-dev"      : {
        "satooshi/php-coveralls": "dev-master",
        "phpunit/phpunit"       : "4.1.*",
        "mockery/mockery"       : "0.9.*"
    },
    "autoload"         : {
        "psr-0": {
            "MamuzBlog\\": "src/"
        }
    }
}
